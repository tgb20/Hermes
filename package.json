{
  "name": "hermes",
  "version": "1.0.0",
  "productName": "Hermes",
  "description": "Hermes enables you to control your Tello drone with code using Scratch blocks, keyboard, and mouse controls.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tgb20/Hermes.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder -p always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "electron-log": "^4.2.1",
    "electron-prompt": "^1.5.1",
    "electron-updater": "^4.3.1",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "material-design-lite": "^1.3.0",
    "moment": "^2.24.0",
    "tello-drone": "^3.0.4",
    "ws": "^7.4.6"
  },
  "build": {
    "appId": "hermes",
    "mac": {
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "publish": [
        "github"
      ],
      "target": [
        "dmg",
        "zip"
      ],
      "extraFiles": [
        {
          "from": "resources/mac/bin",
          "to": "resources/mac/bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "win": {
      "target": "NSIS",
      "extraFiles": [
        {
          "from": "resources/win/bin",
          "to": "resources/win/bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "afterSign": "build/notarize.js"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron": "^13.6.6",
    "electron-builder": "^22.5.1",
    "electron-notarize": "^0.3.0"
  }
}
